<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->

        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- MainScreen Button Layout-->
    <style name="Buttons_MainScreen" parent="android:Theme.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">30sp</item>

        <item name="android:textColor">#C9FBFF</item>
        <item name="android:background">@drawable/buttonshape_selector</item>
        <item name="android:shadowColor">#4DE7FF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:animateOnClick">true</item>

    </style>

    <!--Calculator buttons Layout-->
    <style name="Buttons_calculator" parent="android:Theme.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#C9FBFF</item>
        <item name="android:background">@drawable/buttonshape_calc_selector</item>
        <item name="android:shadowColor">#4DE7FF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <!--Calculator buttons Layout 2.0 -->
    <style name="Buttons_calculator_2" parent="android:Theme.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>

        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#C9FBFF</item>

        <item name="android:shadowColor">#4DE7FF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>

        <item name="android:background">@drawable/buttonshape_calc_selector_2</item>

    </style>

    <!-- For calculator red delete button-->
    <style name="Buttons_calculator_Red" parent="android:Theme.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFB3AD</item>
        <item name="android:background">@drawable/buttonshape_calc_selector_red</item>
        <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">7</item>
    </style>


    <!-- For calculator green tip button-->
    <style name="Buttons_calculator_Green" parent="android:Theme.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#C8FFB8</item>
        <item name="android:background">@drawable/buttonshape_calc_selector_green</item>
        <item name="android:shadowColor">#08F717</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <!-- Service great-->
    <style name="Buttons_service_great" parent="android:Theme.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">start|end|fill_vertical</item>

        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#fffdc9</item>
        <item name="android:shadowColor">#FFFF00</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/buttonshape_svc_great_selector</item>
    </style>

    <!-- Service good-->
    <style name="Buttons_service_good" parent="android:Theme.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">start|end|fill_vertical</item>

        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#C9FBFF</item>
        <item name="android:shadowColor">#4DE7FF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/buttonshape_svc_good_selector</item>
    </style>

    <!-- Service bad-->
    <style name="Buttons_service_bad" parent="android:Theme.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">start|end|fill_vertical</item>

        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#ffc9c9</item>
        <item name="android:shadowColor">#f90000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/buttonshape_svc_good_selector</item>
    </style>

    <!-- fragment_bill_amount_text_views-->
    <style name="Tip_Totals_Blue" parent="android:Theme.Holo">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#D9D9D9</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>
    <style name="Tip_Totals_Green" parent="android:Theme.Holo">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#C8FFB8</item>
        <item name="android:shadowColor">#08F717</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>
    <style name="Tip_Totals_Button_Green" parent="android:Theme.Holo">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#C8FFB8</item>
        <item name="android:shadowColor">#08F717</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/buttonshape_calc_selector_green</item>
    </style>

</resources>
